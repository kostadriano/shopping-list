
<%= simple_form_for(@shopping_list) do |f| %>
  <%= f.error_notification %>

<div class="fields">
  <div class="form-inputs">
    <%= f.input :name %>

    <% if @shopping_list.persisted? %>
      <%= f.input :completed, class: 'form-field' %>
    <% end %>

    <div class="items-fields-container">
      <h5>Items</h5>
        <%= f.simple_fields_for :items do |i| %>
          <%= render 'item_fields', f: i %>
        <% end %>
    </div>
  </div>

  <p><%= link_to_add_fields f, :items %></p>
</div>
  <div class="form-actions">
    <%= f.button  :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
