<h1><%= t('listing', name: t('item.title', count: 1)) %></h1>

<table class="table table-striped table-hover">

 <tr>
   <th scope="row"><%= t('item.description') %>:</th>
   <td><%= @item.description %></td>
 </tr>
 <tr>
   <th scope="row"><%= t('item.quantity') %>:</th>
   <td><%= @item.quantity %></td>
 </tr>
 <tr>
   <th scope="row"><%= t('item.shopping_list') %>:</th>
   <td><%= @item.shopping_list %></td>
 </tr>

</table>

<%= link_to t('edit'), edit_item_path(@item), class: 'btn btn-primary', role: :button %>
<%= link_to t('index'), items_path, class: 'btn btn-outline-secondary', role: :button %>
