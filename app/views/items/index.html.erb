<h1><%= t('listing', name: t('item.title', count: 2)) %></h1>

<table class="table table-striped table-hover table-sm">
 <thead>
   <tr>
     <th scope="col"><%= t('item.description') %></th>
     <th scope="col"><%= t('item.quantity') %></th>
     <th scope="col"><%= t('item.shopping_list') %></th>
     <th scope="col"><%= t('actions') %></th>
   </tr>
 </thead>

 <tbody>
   <% @items.each do |item| %>
     <tr>
       <td><%= item.description %></td>
       <td><%= item.quantity %></td>
       <td><%= item.shopping_list %></td>

       <td>
         <div class="btn-group btn-group-sm" role="group">
           <%= link_to t('show'), item, class: 'btn btn-info', role: :button %>
           <%= link_to t('edit'), edit_item_path(item), class: 'btn btn-success', role: :button %>
           <%= link_to t('destroy'), item, method: :delete, data: { confirm: t('confirm_destroy') }, class: 'btn btn-danger', role: :button %>
         </div>
       </td>
     </tr>
   <% end %>
 </tbody>
</table>

<br>

<%= link_to t('new', name: t('item.title', count: 1)), new_item_path, class: 'btn btn-primary', role: :button %>
